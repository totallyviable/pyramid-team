<div class="page-header">
    <h1>Listing users</h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
            </tr>
        </thead>

        <tbody>
            <%= content_tag_for(:tr, @users) do |user| %>
                <td><%= link_to user.id, user %></td>
                <td><%= link_to user.username, user %></td>
            <% end %>
        </tbody>
    </table>
</div>
